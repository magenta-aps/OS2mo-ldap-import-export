{
  "ldap_to_mo": {
    "Employee": {
      "objectClass": "ramodels.mo.employee.Employee",
      "givenname": "{{ldap.givenName or ldap.name|splitlast|first}}",
      "surname": "{{ ldap.sn or ldap.name|splitlast|last or ''}}",
      "cpr_no": "{{ldap.employeeID or None}}",
      "seniority": "{{None}}",
      "nickname_givenname": "{{None}}",
      "nickname_surname": "{{None}}"
    },
    // Note: This key needs to be a valid MO address type name*
    "Email": {
      "objectClass": "ramodels.mo.details.address.Address",
      "value": "{{ldap.mail or None}}",
      "type": "address",
      "validity": "{{ dict(from_date = now()|strftime) }}",

      // Note: Get valid address type uuids by using GET MO/address_types
      "address_type": "{{ dict(uuid=get_address_type_uuid('Email')) }}"
    },
    // Note: This key needs to be a valid MO address type name*
    "Lokation": {
      "objectClass": "ramodels.mo.details.address.Address",
      "value": "{{ ldap.postalAddress or None }}",
      "type": "address",
      "validity": "{{ dict(from_date=now()|strftime) }}",

      // Note: Get valid address type uuids by using GET MO/address_types
      "address_type": "{{ dict(uuid=get_address_type_uuid('Lokation')) }}"
    }
  },
  "mo_to_ldap": {
    "Employee": {
      "objectClass": "user",
      "givenName": "{{mo_employee.givenname}}",
      "sn": "{{mo_employee.surname}}",
      "displayName": "{{mo_employee.surname}}, {{mo_employee.givenname}}",
      "name": "{{mo_employee.givenname}} {{mo_employee.surname}}",
      "employeeID": "{{mo_employee.cpr_no or None}}",
      "department": "{{None}}"
    },
    // Note: This key needs to be a valid MO address type name*
    "Email": {
      "objectClass": "user",
      "mail": "{{mo_address.value}}",
      "employeeID": "{{mo_employee.cpr_no}}"
    },
    // Note: This key needs to be a valid MO address type name*
    "Lokation": {
      "objectClass": "user",
      "postalAddress": "{{mo_address.value}}",
      "employeeID": "{{mo_employee.cpr_no}}"
    }
  }
}

// *Valid address type names can be obtained by making a new address and folding out the
// 'Addressetype' listbox

// Note: Only keys in the relevant mo_to_ldap dicts are retrieved when requesting an
// ldap object

